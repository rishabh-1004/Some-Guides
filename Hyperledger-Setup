mkdir ~/HyperledgerComposer
export COMPOSER_ROOT=~/HyperledgerComposer
cd $COMPOSER_ROOT
mkdir fabric-dev-servers && cd fabric-dev-servers
curl -O https://raw.githubusercontent.com/hyperledger/composer-tools/master/packages/fabric-dev-servers/fabric-dev-servers.zip
unzip fabric-dev-servers.zip

cd $COMPOSER_ROOT/fabric-dev-servers
./downloadFabric.sh
./startFabric.sh
./createPeerAdminCard.sh

cd $COMPOSER_ROOT/developerWorks/iot-perishable-network

#if this doesnt work
composer network deploy -a dist/rental-agreement.bna -A admin -S adminpw -c PeerAdmin@hlfv1 -f networkadmin.card
#try this
curl -sSL https://hyperledger.github.io/composer/install-hlfv1.sh | bash

composer card import --file networkadmin.card

npm install -g composer-rest-server

composer-rest-server -v
